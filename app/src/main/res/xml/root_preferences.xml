<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/account">

        <EditTextPreference
            app:key="account"
            app:title="@string/change_password"
            />


    </PreferenceCategory>

    <PreferenceCategory
        android:background="#FF9800"
        android:backgroundTint="#FF9800"
        android:foregroundTint="#FF9800"
        app:title="@string/general">


        <ListPreference
            app:defaultValue="3"
            app:dialogTitle="@string/remind_to_take_a_break"
            app:entries="@array/pref_remind_me_to_take_a_break"
            app:entryValues="@array/pref_duration"
            app:key="@string/key_upload_quality"
            app:summary="@string/remind_me"
            app:title="@string/remind_me" />


        <ListPreference
            app:defaultValue="360"
            app:dialogTitle="@string/uploads"
            app:entries="@array/pref_uploads"
            app:entryValues="@array/pref_duration"
            app:key="@string/pref_uploads"
            app:summary="@string/specify_network_prefs"
            app:title="Uploads" />


    </PreferenceCategory>
    <EditTextPreference
        android:key="logout"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/log_out" />
    <EditTextPreference
        android:key="delete_acc"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/delete_acc" />


</PreferenceScreen>