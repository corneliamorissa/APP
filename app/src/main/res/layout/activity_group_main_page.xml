<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Group_main_page">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="149dp"
        android:layout_height="134dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="459dp"
        android:onClick="onBtnPickClicked"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/group" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="149dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="420dp"

        android:lineSpacingExtra="8sp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/topics"
        android:layout_width="310dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="217dp"
        android:backgroundTint="#393939"
        android:foregroundTint="#000000"

        android:text="Topics"
        android:textColor="#FF9800"
        app:cornerRadius="10dp"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/Members"
        android:layout_width="310dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="303dp"
        android:backgroundTint="#393939"
        android:foregroundTint="#000000"
        android:onClick="onMemebrs_Clicked"
        android:text="Members"
        android:textColor="#FF9800"
        app:cornerRadius="10dp"
        app:iconTint="#FFFFFF"
        app:rippleColor="#000000"
        tools:ignore="OnClick" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="13dp"
        android:clickable="true"
        app:srcCompat="@drawable/car_ui_icon_settings" />

    <Button
        android:id="@+id/join_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="88dp"
        android:text="JOIN" />


</RelativeLayout>